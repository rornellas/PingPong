<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerActivity">

    <TextView
            android:text="PingPongX"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="32sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Vai começar a partida!"
            android:layout_width="384dp"
            android:layout_height="49dp"
            android:id="@+id/textView2" android:textSize="32sp"
            style="@style/Widget.AppCompat.TextView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView" android:textStyle="bold"
            android:textColor="#090909"/>
    <TextView
            android:text="Preencha abaixo os nomes dos jogadores"
            android:layout_width="383dp"
            android:layout_height="79dp"
            android:id="@+id/textView3" android:textSize="30sp" app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="@+id/textView3" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:hint="Nome player 1"
            style="@style/home_input"/>
    <EditText
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/editText" app:layout_constraintEnd_toEndOf="@+id/editText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:hint="Nome player 2" style="@style/away_input"/>
    <Button
            android:text="COMEÇAR PARTIDA"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.492"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView4"
    />
    <TextView
            android:text="Desenvolvido por Rodrigo Ornellas"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/button" android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.535"/>
</androidx.constraintlayout.widget.ConstraintLayout>